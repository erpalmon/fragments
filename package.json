{
  "name": "fragments",
  "version": "1.0.0",
  "scripts": {
    "test": "NODE_ENV=test jest --config=jest.config.cjs --detectOpenHandles",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:integration": "hurl --test tests/integration/post-fragments.hurl",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "start": "PORT=${PORT:-8081} HTPASSWD_FILE=./tests/fixtures/.htpasswd NODE_ENV=development node src/server.js",
    "prepare": "husky"
  },
  "dependencies": {
    "aws-jwt-verify": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^8.1.0",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "dotenv": "^16.4.5",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^11.2.2",
    "stoppable": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/runtime": "^7.28.4",
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.11",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jest": "^27.9.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.2.4",
    "pretty-quick": "^4.2.2",
    "supertest": "^6.3.3",
    "tslib": "^2.8.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
