{
  "name": "fragments",
  "private": true,
  "version": "0.9.2",
  "description": "Fragments back-end API",
  "type": "commonjs",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",

    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\"",

    "lint": "eslint \"./src/**/*.js\" \"tests/**/*.js\"",

    "start": "node src/index.js",
    "dev": "LOG_LEVEL=debug nodemon ./src/index.js --watch src",
    "debug": "LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src",

    "local:aws:setup": "sh scripts/local-aws-setup.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erpalmon/fragments.git"
  },
  "author": "Ella Palmon",
  "license": "UNLICENSED",

  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@istanbuljs/schema": "^0.1.3",
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.940.0",
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/lib-dynamodb": "^3.940.0",
    "aws-jwt-verify": "^5.1.0",
    "compression": "^1.8.1",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "debug": "^4.4.3",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-auth": "^4.2.1",
    "http-auth-passport": "^1.0.7",
    "markdown-it": "^14.1.0",
    "oidc-client-ts": "^3.3.0",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^9.9.4",
    "pino-http": "^10.5.0",
    "stoppable": "^1.1.0"
  }
}
